def recomendation(data):
    recomended = []
    for users in data:
        user_recom = {}

        user_recom["name"] = users["name"]

        if float(users["rating"]) < 4:
            user_recom["brand"] = "Apple"
        else:
            user_recom["brand"] = "Samsung"

        recomended.append(user_recom)

    return recomended




